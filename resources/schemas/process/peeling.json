{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/process/peeling.json",
  "type": "object",
  "properties": {
    "process": {
      "const": "peeling"
    },
    "foodstuff": {
      "$ref": "../definitions.json#/foodstuff"
    },
    "instruments": {
      "$ref": "../definitions.json#/instruments"
    },
    "residuals": {
      "const": true
    }
  },
  "required": [
    "process",
    "foodstuff",
    "residuals"
  ],
  "additionalProperties": false,
  "meta": {
    "conditions": {
      "necessaryInstruments": [
        {
          "i1": ["family", "peeler"]
        },
        {
          "i1": ["family", "cutter"]
        }
      ]
    },
    "foodstuffKeywords": "foodstuff"
  }
}
