{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://cercadevigo.ddns.net:8080/schemas/process/dividing.json",
  "$comment": "It only handles even pieces. Extend syntax to allow for irregular division.",
  "type": "object",
  "properties": {
    "process": {
      "const": "dividing"
    },
    "parameters": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "weight": {
              "$ref": "../definitions.json#/quantities/mass"
            }
          },
          "additionalProperties": false
        },
        {
          "properties": {
            "pieces": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "foodstuff": {
      "$ref": "../definitions.json#/foodstuff"
    },
    "instruments": {
      "$ref": "../definitions.json#/instruments"
    }
  },
  "required": [
    "process",
    "parameters",
    "foodstuff",
    "instruments"
  ],
  "additionalProperties": false,
  "definitions": {
    "conditions": {
      "necessaryInstruments": [
        {
          "i1": ["type", "worktop"]
        },
        {
          "i1": ["family", "surface"]
        }
      ]
    },
    "foodstuffKeywords": "foodstuff"
  }
}
