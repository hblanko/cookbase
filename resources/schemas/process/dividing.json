{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/process/dividing.json",
  "$comment": "It only handles even pieces. Extend syntax to allow for irregular division.",
  "type": "object",
  "properties": {
    "process": {
      "const": "dividing"
    },
    "parameters": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "weight": {
          "$ref": "../definitions.json#/quantities/mass"
        },
        "pieces": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "additionalProperties": false
    },
    "foodstuff": {
      "$ref": "../definitions.json#/foodstuff"
    },
    "instruments": {
      "$ref": "../definitions.json#/instruments"
    }
  },
  "required": [
    "process",
    "parameters",
    "foodstuff",
    "instruments"
  ],
  "additionalProperties": false,
  "meta": {
    "conditions": {
      "necessaryInstruments": [
        {
          "i1": [
            "type",
            "worktop"
          ]
        },
        {
          "i1": [
            "family",
            "surface"
          ]
        }
      ]
    },
    "foodstuffKeywords": "foodstuff"
  }
}
