{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/process/dicing.json",
  "type": "object",
  "properties": {
    "process": {
      "const": "dicing"
    },
    "parameters": {
      "type": "object",
      "properties": {
        "size": {
          "$ref": "../definitions.json#/quantities/length"
        }
      },
      "required": [
        "size"
      ],
      "additionalProperties": false
    },
    "foodstuff": {
      "$ref": "../definitions.json#/foodstuff"
    },
    "instruments": {
      "allOf": [
        {
          "$ref": "../definitions.json#/instruments"
        },
        {
          "minItems": 2
        }
      ]
    }
  },
  "required": [
    "process",
    "parameters",
    "foodstuff",
    "instruments"
  ],
  "additionalProperties": false,
  "meta": {
    "conditions": {
      "necessaryInstruments": [
        {
          "i1": ["family", "cutter"]
        },
        {
          "i1": ["type", "cutting board"]
        }
      ]
    },
    "foodstuffKeywords": "foodstuff"
  }
}
