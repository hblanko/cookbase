{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/process/separating.json",
  "$comment": "This process schema has to be redefined. The 'parts' property is not yet defined in 'schema-process.json'",
  "type": "object",
  "properties": {
    "process": {
      "const": "separating"
    },
    "foodstuff": {
      "$ref": "../definitions.json#/foodstuff"
    },
    "instruments": {
      "$ref": "../definitions.json#/instruments"
    },
    "parts": {
      "type": "object",
      "minProperties": 2,
      "patternProperties": {
        "^part[1-9]\\d{0,1}$": {
          "type": "object",
          "properties": {
            "amount": {
              "oneOf": [
                {
                  "$ref": "../definitions.json#/quantities/length"
                },
                {
                  "$ref": "../definitions.json#/quantities/mass"
                },
                {
                  "$ref": "../definitions.json#/quantities/volume"
                },
                {
                  "$ref": "../definitions.json#/proportion"
                }
              ]
            },
            "additionalProperties": false
          },
          "required": [
            "amount"
          ],
          "additionalProperties": false
        },
        "additionalProperties": false
      },
      "required": [
        "part1",
        "part2"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "process",
    "foodstuff",
    "instruments",
    "parts"
  ],
  "additionalProperties": false,
  "meta": {
    "conditions": {
      "necessaryInstruments": [
        {
          "i1": [
            "type",
            "worktop"
          ]
        },
        {
          "i1": [
            "family",
            "surface"
          ]
        }
      ]
    },
    "foodstuffKeywords": "foodstuff"
  }
}
