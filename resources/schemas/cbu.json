{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/cbu.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "family",
    "type"
  ],
  "properties": {
    "schema": {
      "const": "http://landarltracker.com/schemas/cbu.json"
    },
    "_id": {
      "bsonType": "objectId"
    },
    "family": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "type": {
      "$comment": "Keys are language codes following the IETF Tags for Identifying Languages (BCP 47) standard",
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string"
            }
          }
        ]
      }
    },
    "description": {
      "$comment": "Keys are language codes following the IETF Tags for Identifying Languages (BCP 47) standard",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "requiredProperties": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "temperatureRange",
          "length",
          "diameter",
          "volume"
        ]
      }
    },
    "typicalProperties": {
      "$comment": "improve this",
      "type": "object",
      "properties": {
        "materials": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "steel",
              "iron",
              "wood",
              "glass",
              "ceramic",
              "teflon",
              "silicon"
            ]
          }
        }
      }
    },
    "info": {
      "type": "object",
      "properties": {
        "pictureUrl": {
          "type": "string"
        }
      }
    }
  }
}
