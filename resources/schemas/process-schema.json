{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/process-schema.json",
  "title": "CBR process schema - v1.0",
  "description": "Schema that describes the format of a CBR process schema.",
  "examples": [
    {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "$id": "http://www.landarltracker.com/schemas/process/adding.json",
      "title": "Process 'adding'",
      "description": "Schema defining the format of an 'adding' process.",
      "examples": [
        {
          "name": {
            "text": "adding",
            "language": "en-US"
          },
          "cbpId": 3308424952,
          "foodstuffsList": [
            "proc1",
            "ing1",
            "ing2"
          ],
          "appliances": [
            {
              "appliance": "inst1",
              "usedAfter": true
            },
            {
              "appliance": "inst2",
              "usedAfter": false
            }
          ]
        }
      ],
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "cbpId",
        "foodstuffsList",
        "appliances"
      ],
      "properties": {
        "name": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "text",
            "language"
          ],
          "properties": {
            "text": {
              "type": "string"
            },
            "language": {
              "$comment": "Language code following the IETF Tags for Identifying Languages (BCP 47) standard",
              "type": "string"
            }
          }
        },
        "cbpId": {
          "const": 3308424952
        },
        "foodstuffsList": {
          "$ref": "../cb-global-definitions.json#/foodstuffsList"
        },
        "appliances": {
          "$ref": "../cb-global-definitions.json#/appliances"
        },
        "notes": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "text",
            "language"
          ],
          "properties": {
            "text": {
              "type": "string",
              "maxLength": 200
            },
            "language": {
              "$comment": "Keys are language codes following the IETF Tags for Identifying Languages (BCP 47) standard",
              "type": "string"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "foodstuff": {
      "type": "string"
    },
    "foodstuffsList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "appliances": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "appliance": {
            "type": "string"
          },
          "usedAfter": {
            "type": "boolean"
          }
        },
        "required": [
          "appliance",
          "usedAfter"
        ],
        "additionalProperties": false
      }
    },
    "return": {
      "type": "object"
    }
  },
  "type": "object",
  "properties": {
    "$schema": {
      "const": "http://json-schema.org/draft-07/schema#"
    },
    "$id": {
      "type": "string"
    },
    "$comment": {
      "type": "string"
    },
    "type": {
      "const": "object"
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../cb-global-definitions.json#/textWithLanguage"
            }
          },
          "required": [
            "$ref"
          ]
        },
        "parameters": {
          "type": "object",
          "properties": {
            "type": {
              "const": "object"
            },
            "minProperties": {
              "const": 1
            },
            "properties": {
              "type": "object",
              "minProperties": 1,
              "properties": {
                "size": {
                  "type": "object",
                  "properties": {
                    "$ref": {
                      "const": "../cb-global-definitions.json#/quantities/length"
                    }
                  },
                  "required": [
                    "$ref"
                  ]
                },
                "temperature": {
                  "type": "object",
                  "properties": {
                    "$ref": {
                      "const": "../cb-global-definitions.json#/quantities/temperature"
                    }
                  },
                  "required": [
                    "$ref"
                  ]
                },
                "time": {
                  "type": "object",
                  "properties": {
                    "$ref": {
                      "const": "../cb-global-definitions.json#/quantities/time"
                    }
                  },
                  "required": [
                    "$ref"
                  ]
                },
                "ovenPosition": {
                  "type": "object",
                  "properties": {
                    "$ref": {
                      "const": "../cb-global-definitions.json#/quantities/descriptive/height"
                    }
                  },
                  "required": [
                    "$ref"
                  ]
                },
                "weight": {
                  "type": "object",
                  "properties": {
                    "$ref": {
                      "const": "../cb-global-definitions.json#/quantities/mass"
                    }
                  },
                  "required": [
                    "$ref"
                  ]
                },
                "pieces": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "number"
                    },
                    "exclusiveMinimum": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "type",
                    "exclusiveMinimum"
                  ]
                },
                "endConditions": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "const": "object"
                    },
                    "properties": {
                      "type": "object",
                      "minProperties": 1,
                      "properties": {
                        "time": {
                          "type": "object",
                          "properties": {
                            "$ref": {
                              "const": "../cb-global-definitions.json#/quantities/time"
                            }
                          },
                          "required": [
                            "$ref"
                          ]
                        },
                        "descriptive": {
                          "type": "object",
                          "properties": {
                            "$ref": {
                              "const": "../cb-global-definitions.json#/textWithLanguage"
                            }
                          },
                          "required": [
                            "$ref"
                          ]
                        }
                      }
                    }
                  },
                  "required": [
                    "type",
                    "properties"
                  ]
                }
              }
            },
            "required": {
              "$ref": "http://json-schema.org/draft-07/schema#/definitions/stringArray"
            },
            "additionalProperties": {
              "const": false
            }
          },
          "required": [
            "type",
            "properties",
            "additionalProperties"
          ]
        },
        "cbpId": {
          "type": "object",
          "properties": {
            "const": {
              "$ref": "cb-global-definitions.json#/hashCRC32"
            }
          },
          "required": [
            "const"
          ]
        },
        "foodstuff": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../process-schema.json#/foodstuff"
            }
          },
          "required": [
            "$ref"
          ]
        },
        "foodstuffsList": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../process-schema.json#/foodstuffsList"
            }
          },
          "required": [
            "$ref"
          ]
        },
        "base": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../process-schema.json#/foodstuff"
            }
          },
          "required": [
            "$ref"
          ]
        },
        "onTop": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../process-schema.json#/foodstuffsList"
            }
          },
          "required": [
            "$ref"
          ]
        },
        "sauce": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../process-schema.json#/foodstuff"
            }
          },
          "required": [
            "$ref"
          ]
        },
        "appliances": {
          "type": "object",
          "oneOf": [
            {
              "properties": {
                "$ref": {
                  "const": "../process-schema.json#/appliances"
                }
              },
              "required": [
                "$ref"
              ]
            },
            {
              "properties": {
                "allOf": {
                  "type": "array",
                  "minItems": 2,
                  "items": [
                    {
                      "type": "object",
                      "properties": {
                        "$ref": {
                          "const": "../process-schema.json#/appliances"
                        }
                      },
                      "required": [
                        "$ref"
                      ]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "minItems": {
                          "type": "integer",
                          "exclusiveMinimum": 1
                        }
                      },
                      "required": [
                        "minItems"
                      ]
                    }
                  ],
                  "additionalItems": false
                }
              },
              "required": [
                "allOf"
              ]
            }
          ]
        },
        "residuals": {
          "type": "object",
          "properties": {
            "const": {
              "const": true
            }
          },
          "required": [
            "const"
          ]
        },
        "return": {
          "type": "object",
          "properties": {
            "const": {
              "const": true
            }
          },
          "required": [
            "const"
          ]
        },
        "notes": {
          "type": "object",
          "properties": {
            "$ref": {
              "const": "../cb-global-definitions.json#/notes"
            }
          },
          "required": [
            "$ref"
          ]
        }
      },
      "required": [
        "name",
        "cbpId",
        "appliances",
        "notes"
      ]
    },
    "required": {
      "$ref": "http://json-schema.org/draft-07/schema#/definitions/stringArray"
    },
    "additionalProperties": {
      "const": false
    }
  },
  "required": [
    "type",
    "properties",
    "required",
    "additionalProperties"
  ]
}
