{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://www.landarltracker.com/schemas/process-meta-schema.json",
	"type": "object",
	"properties": {
		"$schema": {
			"const": "http://json-schema.org/draft-07/schema#"
		},
		"$id": {
			"type": "string"
		},
		"$comment": {
			"type": "string"
		},
		"type": {
			"const": "object"
		},
		"properties": {
			"type": "object",
			"properties": {
				"process": {
					"type": "object",
					"properties": {
						"const": {
							"type": "string"
						}
					},
					"required": [
						"const"
					]
				},
				"parameters": {
					"type": "object",
					"properties": {
						"type": {
							"const": "object"
						},
						"minProperties": {
							"const": 1
						},
						"properties": {
							"type": "object",
							"minProperties": 1,
							"properties": {
								"size": {
									"type": "object",
									"properties": {
										"$ref": {
											"const": "../definitions.json#/quantities/length"
										}
									},
									"required": [
										"$ref"
									]
								},
								"temperature": {
									"type": "object",
									"properties": {
										"$ref": {
											"const": "../definitions.json#/quantities/temperature"
										}
									},
									"required": [
										"$ref"
									]
								},
								"time": {
									"type": "object",
									"properties": {
										"$ref": {
											"const": "../definitions.json#/quantities/time"
										}
									},
									"required": [
										"$ref"
									]
								},
								"ovenPosition": {
									"type": "object",
									"properties": {
										"$ref": {
											"const": "../definitions.json#/quantities/descriptive/height"
										}
									},
									"required": [
										"$ref"
									]
								},
								"weight": {
									"type": "object",
									"properties": {
										"$ref": {
											"const": "../definitions.json#/quantities/mass"
										}
									},
									"required": [
										"$ref"
									]
								},
								"pieces": {
									"type": "object",
									"properties": {
										"type": {
											"const": "number"
										},
										"exclusiveMinimum": {
											"type": "integer"
										}
									},
									"required": [
										"type",
										"exclusiveMinimum"
									]
								},
								"endConditions": {
									"type": "object",
									"properties": {
										"type": {
											"const": "object"
										},
										"properties": {
											"type": "object",
											"minProperties": 1,
											"properties": {
												"time": {
													"type": "object",
													"properties": {
														"$ref": {
															"const": "../definitions.json#/quantities/time"
														}
													},
													"required": [
														"$ref"
													]
												},
												"descriptive": {
													"type": "object",
													"properties": {
														"default": {
															"type": "string"
														},
														"type": {
															"const": "string"
														}
													},
													"required": [
														"type"
													]
												}
											}
										}
									},
									"required": [
										"type",
										"properties"
									]
								}
							}
						},
						"required": {
							"$ref": "http://json-schema.org/draft-07/schema#/definitions/stringArray"
						},
						"additionalProperties": {
							"const": false
						}
					},
					"required": [
						"type",
						"properties",
						"additionalProperties"
					]
				},
				"foodstuff": {
					"type": "object",
					"properties": {
						"$ref": {
							"const": "../definitions.json#/foodstuff"
						}
					},
					"required": [
						"$ref"
					]
				},
				"foodstuffsList": {
					"type": "object",
					"properties": {
						"$ref": {
							"const": "../definitions.json#/foodstuffsList"
						}
					},
					"required": [
						"$ref"
					]
				},
				"base": {
					"type": "object",
					"properties": {
						"$ref": {
							"const": "../definitions.json#/foodstuff"
						}
					},
					"required": [
						"$ref"
					]
				},
				"onTop": {
					"type": "object",
					"properties": {
						"$ref": {
							"const": "../definitions.json#/foodstuffsList"
						}
					},
					"required": [
						"$ref"
					]
				},
				"sauce": {
					"type": "object",
					"properties": {
						"$ref": {
							"const": "../definitions.json#/foodstuff"
						}
					},
					"required": [
						"$ref"
					]
				},
				"instruments": {
					"type": "object",
					"oneOf": [
						{
							"properties": {
								"$ref": {
									"const": "../definitions.json#/instruments"
								}
							},
							"required": [
								"$ref"
							]
						},
						{
							"properties": {
								"allOf": {
									"type": "array",
									"minItems": 2,
									"items": [
										{
											"type": "object",
											"properties": {
												"$ref": {
													"const": "../definitions.json#/instruments"
												}
											},
											"required": [
												"$ref"
											]
										},
										{
											"type": "object",
											"properties": {
												"minItems": {
													"type": "integer",
													"exclusiveMinimum": 1
												}
											},
											"required": [
												"minItems"
											]
										}
									],
									"additionalItems": false
								}
							},
							"required": [
								"allOf"
							]
						}
					]
				},
				"residuals": {
					"type": "object",
					"properties": {
						"const": {
							"const": true
						}
					},
					"required": [
						"const"
					]
				},
				"return": {
					"type": "object",
					"properties": {
						"const": {
							"const": true
						}
					},
					"required": [
						"const"
					]
				}
			},
			"required": [
				"process"
			]
		},
		"required": {
			"$ref": "http://json-schema.org/draft-07/schema#/definitions/stringArray"
		},
		"additionalProperties": {
			"const": false
		},
		"meta": {
			"type": "object",
			"properties": {
				"conditions": {
					"type": "object",
					"properties": {
						"necessaryInstruments": {
							"oneOf": [
								{
									"type": "array",
									"minItems": 1,
									"items": {
										"$ref": "#/necessaryInstrumentsSet-def"
									}
								},
								{
									"$ref": "#/necessaryInstrumentsSet-def"
								}
							]
						}
					},
					"required": [
						"necessaryInstruments"
					]
				},
				"foodstuffKeywords": {
					"oneOf": [
						{
							"$ref": "#/foodstuffKeywords-def"
						},
						{
							"type": "array",
							"minItems": 2,
							"items": {
								"$ref": "#/foodstuffKeywords-def"
							},
							"additionalItems": false
						}
					]
				}
			},
			"required": [
				"conditions",
				"foodstuffKeywords"
			]
		}
	},
	"required": [
		"type",
		"properties",
		"required",
		"additionalProperties",
		"meta"
	],
	"foodstuffKeywords-def": {
		"$comment": "New foodstuff keywords must be included into this enum",
		"enum": [
			"foodstuff",
			"foodstuffsList",
			"base",
			"onTop",
			"sauce"
		]
	},
	"necessaryInstrumentsSet-def": {
		"type": "object",
		"minProperties": 1,
		"patternProperties": {
			"^i[1-9]$": {
				"type": "array",
				"minItems": 2,
				"items": [
					{
						"type": "string",
						"enum": [
							"family",
							"type"
						]
					},
					{
						"type": "string"
					}
				],
				"additionalItems": false
			}
		}
	}
}
