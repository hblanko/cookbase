{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/yield.json",
  "type": "object",
  "properties": {
    "servings": {
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "servingSize": {
      "type": "object",
      "properties": {
        "descriptive": {
          "type": "string",
          "enum": [
            "small",
            "medium",
            "size"
          ]
        },
        "weight": {
          "$ref": "cb-global-definitions.json#/quantities/mass"
        },
        "volume": {
          "$ref": "cb-global-definitions.json#/quantities/volume"
        }
      }
    },
    "servingFormat": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
