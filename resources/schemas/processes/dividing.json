{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/processes/dividing.json",
  "title": "Process 'dividing'",
  "description": "Schema defining the format of a 'dividing' process.",
  "examples": [
    {
      "name": {
        "text": "dividing",
        "language": "en"
      },
      "parameters": {
        "weight": {
          "value": 70,
          "measure": "g"
        }
      },
      "cbpId": 3172901335,
      "foodstuff": "ing1",
      "appliances": [
        {
          "appliance": "inst1",
          "usedAfter": true
        },
        {
          "appliance": "inst2",
          "usedAfter": false
        }
      ]
    }
  ],
  "$comment": "It only handles even portions. Extend syntax to allow for irregular division.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "parameters",
    "cbpId",
    "foodstuff",
    "appliances"
  ],
  "properties": {
    "name": {
      "$ref": "../cb-global-definitions.json#/textWithLanguage"
    },
    "parameters": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "weight": {
          "$ref": "../cb-global-definitions.json#/quantities/mass"
        },
        "pieces": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "additionalProperties": false
    },
    "cbpId": {
      "const": 3172901335
    },
    "foodstuff": {
      "$ref": "../process-schema.json#/definitions/foodstuff"
    },
    "appliances": {
      "$ref": "../process-schema.json#/definitions/appliances"
    },
    "notes": {
      "$ref": "../cb-global-definitions.json#/notes"
    }
  }
}
