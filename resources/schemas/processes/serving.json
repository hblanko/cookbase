{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/processes/serving.json",
  "title": "Process 'serving'",
  "description": "Schema defining the format of a 'serving' process.",
  "examples": [
    {
      "name": {
        "text": "serving",
        "language": "en"
      },
      "parameters": {
        "portions": 4
      },
      "cbpId": 3124594099,
      "foodstuffsList": [
        "proc1",
        "proc2"
      ],
      "appliances": [
        {
          "appliance": "inst1",
          "usedAfter": true
        },
        {
          "appliance": "inst2",
          "usedAfter": false
        },
        {
          "appliance": "inst3",
          "usedAfter": false
        }
      ]
    }
  ],
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "cbpId",
    "foodstuffsList",
    "appliances"
  ],
  "properties": {
    "name": {
      "$ref": "../cb-global-definitions.json#/textWithLanguage"
    },
    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "portions"
      ],
      "properties": {
        "portions": {
          "type": "integer",
          "exclusiveMinimum": 0
        }
      }
    },
    "cbpId": {
      "const": 3124594099
    },
    "foodstuffsList": {
      "$ref": "../process-schema.json#/definitions/foodstuffsList"
    },
    "appliances": {
      "$ref": "../process-schema.json#/definitions/appliances"
    },
    "notes": {
      "$ref": "../cb-global-definitions.json#/notes"
    }
  }
}
