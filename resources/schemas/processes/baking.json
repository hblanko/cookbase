  "properties": {
    "name": {
      "$ref": "../cb-global-definitions.json#/textWithLanguage"
    },
    "parameters": {
      "type": "object",
      "properties": {
        "temperature": {
          "$ref": "../cb-global-definitions.json#/quantities/temperature"
        },
        "ovenPosition": {
          "$ref": "../cb-global-definitions.json#/quantities/descriptive/height"
        },
        "endConditions": {
          "type": "object",
          "properties": {
            "time": {
              "$ref": "../cb-global-definitions.json#/quantities/time"
            },
            "descriptive": {
              "$comment": "TO-DO: Default value is discarded. Different approach should be considered, probably creating vocabulary into a new meta-schema with a 'descriptive' keyword and allowing enumeration of possible descriptions.",
              "$ref": "../cb-global-definitions.json#/textWithLanguage"
            }
          }
        }
      },
      "required": [
        "temperature",
        "endConditions"
      ],
      "additionalProperties": false
    },
    "cbpId": {
      "const": 3542442864
    },
    "foodstuff": {
      "$ref": "../process-schema.json#/definitions/foodstuff"
    },
    "appliances": {
      "allOf": [
        {
          "$ref": "../process-schema.json#/definitions/appliances"
