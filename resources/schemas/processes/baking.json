{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/processes/baking.json",
  "title": "Process 'baking'",
  "description": "Schema defining the format of a 'baking' process.",
  "examples": [
    {
      "name": {
        "text": "baking",
        "language": "en"
      },
      "parameters": {
        "temperature": {
          "value": 250,
          "measure": "Â°C"
        },
        "ovenPosition": "medium",
        "endConditions": {
          "time": {
            "value": 20,
            "measure": "min"
          },
          "descriptive": {
            "text": "until foodstuff gets browned",
            "language": "en"
          }
        }
      },
      "cbpId": 3542442864,
      "foodstuff": "proc1",
      "appliances": [
        {
          "appliance": "inst1",
          "usedAfter": true
        },
        {
          "appliance": "inst2",
          "usedAfter": true
        }
      ]
    }
  ],
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "parameters",
    "cbpId",
    "foodstuff",
    "appliances"
