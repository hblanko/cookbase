{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/processes/dicing.json",
  "title": "Process 'dicing'",
  "description": "Schema defining the format of a 'dicing' process.",
  "examples": [
    {
      "name": {
        "text": "dicing",
        "language": "en"
      },
      "parameters": {
        "size": {
          "value": 5,
          "measure": "mm"
        }
      },
      "cbpId": 4038648643,
      "foodstuff": "ing1",
      "appliances": [
        {
          "appliance": "inst1",
          "usedAfter": true
        },
        {
          "appliance": "inst2",
          "usedAfter": false
        }
      ]
    }
  ],
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "parameters",
    "cbpId",
    "foodstuff",
    "appliances"
  ],
  "properties": {
    "name": {
      "$ref": "../cb-global-definitions.json#/textWithLanguage"
    },
    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "size"
      ],
      "properties": {
        "size": {
          "$ref": "../cb-global-definitions.json#/quantities/length"
        }
      }
    },
    "cbpId": {
      "const": 4038648643
    },
    "foodstuff": {
      "$ref": "../process-schema.json#/definitions/foodstuff"
    },
    "appliances": {
      "allOf": [
        {
          "$ref": "../process-schema.json#/definitions/appliances"
        },
        {
          "minItems": 2
        }
      ]
    },
    "notes": {
      "$ref": "../cb-global-definitions.json#/notes"
    }
  }
}
