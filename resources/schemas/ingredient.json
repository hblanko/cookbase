{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://cercadevigo.ddns.net:8080/schemas/ingredient.json",
  "type": "object",
  "properties": {
    "type": {
      "type": "object",
      "patternProperties": {
        "^key[1-9]\\d{0,1}": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "name": {
      "type": "string"
    },
    "amount": {
      "anyOf": [
        {
          "$ref": "definitions.json#/quantities/mass"
        },
        {
          "$ref": "definitions.json#/quantities/volume"
        }
      ]
    },
    "optional": {
      "const": true
    }
  },
  "required": [
    "name"
  ],
  "additionalProperties": false
}
