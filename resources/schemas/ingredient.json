{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/ingredient.json",
  "title": "Cookbase Recipe's ingredient component",
  "description": "Schema defining the format of a Cookbase Recipe (CBR) ingredient.",
  "type": "object",
  "examples": [
    {
      "subdivision": "dough",
      "name": {
        "text": "white sugar",
        "language": "en"
      },
      "cbiId": 363864347,
      "amount": {
        "value": 7,
        "measure": "g"
      },
      "notes": {
        "text": "any common white sugar could be used",
        "language": "en"
      }
    }
  ],
  "additionalProperties": false,
  "required": [
    "name",
    "cbiId"
  ],
  "properties": {
    "subdivision": {
      "type": "string"
    },
    "name": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "text",
        "language"
      ],
      "properties": {
        "text": {
          "type": "string"
        },
        "language": {
          "$comment": "Language code following the IETF Tags for Identifying Languages (BCP 47) standard",
          "type": "string"
        }
      }
    },
    "cbiId": {
      "$ref": "cb-global-definitions.json#/hashCRC32"
    },
    "amount": {
      "anyOf": [
        {
          "$ref": "cb-global-definitions.json#/quantities/mass"
        },
        {
          "$ref": "cb-global-definitions.json#/quantities/volume"
        }
      ]
    },
    "notes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "text",
        "language"
      ],
      "properties": {
        "text": {
          "type": "string",
          "maxLength": 200
        },
        "language": {
          "$comment": "Keys are language codes following the IETF Tags for Identifying Languages (BCP 47) standard",
          "type": "string"
        }
      }
    },
    "optional": {
      "const": true
    }
  }
}
