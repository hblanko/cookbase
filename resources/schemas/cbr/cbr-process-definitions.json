{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://landarltracker.com/schemas/cbr/cbr-process-definitions.json",
  "title": "Cookbase Recipe Process Schema definitions - v1.0",
  "description": "Definitions of data types used by the CBR Process Schema. Visit https://cookbase.readthedocs.io/en/latest/cbdm.html#cbr-preparation to read the documentation.",
  "$defs": {
    "foodstuff": {
      "type": "string"
    },
    "foodstuffsList": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "appliances": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "appliance": {
            "type": "string"
          },
          "usedAfter": {
            "type": "boolean"
          }
        },
        "required": [
          "appliance",
          "usedAfter"
        ],
        "additionalProperties": false
      }
    },
    "return": {
      "type": "object"
    }
  }
}
