{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://landarltracker.com/schemas/cbr/cbr-appliance.json",
  "title": "Cookbase Recipe Appliance - v1.0",
  "description": "Schema defining the format of a Cookbase Recipe (CBR) Appliance. Visit https://cookbase.readthedocs.io/en/latest/cbdm.html#cbr-appliances to read the documentation.",
  "$defs": {
    "properties": {
      "type": "object",
      "properties": {
        "size": {
          "oneOf": [
            {
              "$ref": "../cb-common-definitions.json#/$defs/quantities/length"
            },
            {
              "type": "object",
              "properties": {
                "relativeTo": {
                  "type": "string"
                }
              },
              "required": [
                "relativeTo"
              ],
              "additionalProperties": false
            }
          ]
        },
        "capacity": {
          "oneOf": [
            {
              "$ref": "../cb-common-definitions.json#/$defs/quantities/volume"
            },
            {
              "type": "object",
              "properties": {
                "relativeTo": {
                  "type": "string"
                }
              },
              "required": [
                "relativeTo"
              ],
              "additionalProperties": false
            }
          ]
        },
        "diameter": {
          "oneOf": [
            {
              "$ref": "../cb-common-definitions.json#/$defs/quantities/length"
            },
            {
              "type": "object",
              "properties": {
                "relativeTo": {
                  "type": "string"
                }
              },
              "required": [
                "relativeTo"
              ],
              "additionalProperties": false
            }
          ]
        },
        "temperatureRange": {
          "type": "object",
          "properties": {
            "minTemperature": {
              "$ref": "../cb-common-definitions.json#/$defs/quantities/temperature"
            },
            "maxTemperature": {
              "$ref": "../cb-common-definitions.json#/$defs/quantities/temperature"
            }
          },
          "additionalProperties": false
        },
        "preferredMaterial": {
          "$ref": "../cb-common-definitions.json#/$defs/material"
        },
        "withCover": {
          "type": "boolean"
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "cbaId"
      ],
      "properties": {
        "name": {
          "$ref": "../cb-common-definitions.json#/$defs/textWithLanguage"
        },
        "cbaId": {
          "$ref": "../cb-common-definitions.json#/$defs/hashCRC32"
        },
        "properties": {
          "$ref": "#/$defs/properties"
        },
        "notes": {
          "$ref": "../cb-common-definitions.json#/$defs/notes"
        },
        "optional": {
          "const": true
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "functions"
      ],
      "properties": {
        "functions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "../cb-common-definitions.json#/$defs/applianceFunction"
          }
        },
        "properties": {
          "$ref": "#/$defs/properties"
        },
        "notes": {
          "$ref": "../cb-common-definitions.json#/$defs/notes"
        },
        "optional": {
          "const": true
        }
      }
    }
  ]
}
