{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/appliance.json",
  "definitions": {
    "properties": {
      "type": "object",
      "properties": {
        "size": {
          "oneOf": [
            {
              "$ref": "cb-global-definitions.json#/quantities/length"
            },
            {
              "type": "object",
              "properties": {
                "relativeTo": {
                  "type": "string"
                }
              },
              "required": [
                "relativeTo"
              ],
              "additionalProperties": false
            }
          ]
        },
        "capacity": {
          "oneOf": [
            {
              "$ref": "cb-global-definitions.json#/quantities/volume"
            },
            {
              "type": "object",
              "properties": {
                "relativeTo": {
                  "type": "string"
                }
              },
              "required": [
                "relativeTo"
              ],
              "additionalProperties": false
            }
          ]
        },
        "diameter": {
          "oneOf": [
            {
              "$ref": "cb-global-definitions.json#/quantities/length"
            },
            {
              "type": "object",
              "properties": {
                "relativeTo": {
                  "type": "string"
                }
              },
              "required": [
                "relativeTo"
              ],
              "additionalProperties": false
            }
          ]
        },
        "temperatureRange": {
          "type": "object",
          "properties": {
            "minTemperature": {
              "$ref": "cb-global-definitions.json#/quantities/temperature"
            },
            "maxTemperature": {
              "$ref": "cb-global-definitions.json#/quantities/temperature"
            }
          },
          "additionalProperties": false
        },
        "preferredMaterial": {
          "$ref": "cb-global-definitions.json#/material"
        },
        "withCover": {
          "type": "boolean"
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "cbaId"
      ],
      "properties": {
        "name": {
          "$ref": "cb-global-definitions.json#/textWithLanguage"
        },
        "cbaId": {
          "$ref": "cb-global-definitions.json#/hashCRC32"
        },
        "properties": {
          "$ref": "#/definitions/properties"
        },
        "notes": {
          "$ref": "cb-global-definitions.json#/notes"
        },
        "optional": {
          "const": true
        }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "functions"
      ],
      "properties": {
        "functions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "cb-global-definitions.json#/applianceFunction"
          }
        },
        "properties": {
          "$ref": "#/definitions/properties"
        },
        "notes": {
          "$ref": "cb-global-definitions.json#/notes"
        },
        "optional": {
          "const": true
        }
      }
    }
  ]
}
