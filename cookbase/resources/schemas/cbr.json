{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.landarltracker.com/schemas/cbr.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "info",
    "yield",
    "ingredients",
    "appliances",
    "preparation"
  ],
  "properties": {
    "schema": {
      "const": "http://landarltracker.com/schemas/cbr.json"
    },
    "id" : {
      "$ref": "cb-global-definitions.json#/recipeId"
    },
    "info": {
      "$ref": "info.json"
    },
    "yield": {
      "$ref": "yield.json"
    },
    "ingredients": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^ing[1-9]\\d{0,1}$": {
          "$ref": "ingredient.json"
        }
      }
    },
    "appliances": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^app[1-9]\\d{0,1}$": {
          "$ref": "appliance.json"
        }
      }
    },
    "preparation": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^proc[1-9]\\d{0,1}$": {
          "$ref": "process.json"
        }
      }
    }
  }
}
