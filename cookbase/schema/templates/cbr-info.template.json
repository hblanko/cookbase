{
  "$$schema": "${json_schema_uri}",
  "$$id": "${cbr_info_schema_url}",
  "title": "Cookbase Recipe's info section - v1.0",
  "description": "Schema defining the content of the Cookbase Recipe (CBR) info section. Visit https://cookbase.readthedocs.io/en/latest/cbdm.html#cbr-info to read the documentation.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "authorship": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "fullName",
        "version"
      ],
      "additionalProperties": false
    },
    "releaseDate": {
      "type": "string"
    },
    "cuisine": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "courseType": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "preparationTime": {
      "$$ref": "${common_defs_path}#/$$defs/quantities/time"
    },
    "cookingTime": {
      "$$ref": "${common_defs_path}#/$$defs/quantities/time"
    },
    "servingTime": {
      "$$ref": "${common_defs_path}#/$$defs/quantities/time"
    },
    "description": {
      "$$ref": "${common_defs_path}#/$$defs/textWithLanguage"
    }
  },
  "required": [
    "name",
    "authorship",
    "releaseDate",
    "cuisine",
    "courseType",
    "preparationTime",
    "cookingTime",
    "servingTime"
  ],
  "additionalProperties": false
}
