{
  "$$schema": "${json_schema_uri}",
  "$$id": "${cbr_yield_schema_url}",
  "type": "object",
  "properties": {
    "servings": {
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "servingSize": {
      "type": "object",
      "properties": {
        "descriptive": {
          "type": "string",
          "enum": [
            "small",
            "medium",
            "size"
          ]
        },
        "weight": {
          "$$ref": "${common_defs_path}#/$$defs/quantities/mass"
        },
        "volume": {
          "$$ref": "${common_defs_path}#/$$defs/quantities/volume"
        }
      }
    },
    "servingFormat": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
